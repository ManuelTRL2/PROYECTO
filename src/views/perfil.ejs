<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>TomaTurnos</title>
    <link rel="shortcut icon" href="img/icon.png" type="image/x-icon">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/style.css">
</head>

<body>

    <head>
        <%- include('partials/head'); -%>
    </head>
    <div class="container mb-5">

        <br>
        <br>
        <div class="row row-cols-1 row-cols-md-2">

            <div class="col collogin">

                <form action="" method="post" class="login-rect mt-5" autocomplete="off" id="perfil">
                    <div class="center mb-3">
                        <img src="/img/perfil.png" alt="centro" class="mt-4" style="max-width: 15%;">
                    </div>

                    <div class="input-gr">
                        <div>
                            <label for="usuario" class="form-label">Usuario</label>
                            <input type="text" class="input mb-4 text-12" id="usuario" name="usuario"
                                value="<%=user.user%>">
                        </div>

                        <div class="row">
                            <div class="col">
                                <label for="nombre" class="form-label">Nombre</label>
                                <input type="text" class="input mb-4 text-12" id="nombre" name="nombre"
                                    value="<%=user.nombre%>" readonly>
                            </div>

                            <div class="col">
                                <label for="tipo" class="form-label">Perfil</label>
                                <input type="text" class="input mb-4 text-12" id="tipo" name="tipo"
                                    value="<%=user.tipo%>" readonly>
                            </div>
                        </div>


                        <div class="row">
                            <div class="col">
                                <label for="fecha" class="form-label">Fecha Registro</label>
                                <input type="text" class="input mb-4 text-12" id="fecha" name="fecha" readonly>
                            </div>

                            <div class="col">
                                <label for="fechaActualizada" class="form-label">Fecha Actualización</label>
                                <input type="text" class="input mb-4 text-12" id="fechaActualizada"
                                    name="fechaActualizada" readonly>
                            </div>
                        </div>

                    </div>

                    <div class="button-gr">
                        <button type="submit" class="button-do"><i
                                class="fa-solid fa-right-to-bracket fa-xl text-secondary"></i></button>
                    </div>
                </form>

            </div>

            <div class="col collogin">

                <form action="/updateContrasena" method="post" class="login-rec mt-5" autocomplete="off"
                    id="formulario">
                    <div class="center mb-3">
                        <img src="/img/centro.png" alt="centro" class="login-img mt-4">
                    </div>

                    <div class="input-gr">
                        <div class="form-group">
                            <input type="password" class="input mb-4 text-12" id="pass" name="pass"
                                value="<%=user.pass%>">
                            <input type="password" class="input mb-4 text-12" id="passNueva" name="passNueva"
                                placeholder="Contraseña nueva">
                            <input type="password" class="input mb-4 text-12" id="passConfirmar" name="passConfirmar"
                                placeholder="Confirmar contraseña nueva">
                        </div>
                    </div>

                    <div class="button-gr">
                        <button type="submit" class="button-do" onclick="validarFormulario()"><i
                                class="fa-solid fa-right-to-bracket fa-xl text-secondary"></i></button>
                    </div>

                </form>

            </div>
        </div>


    </div>
    <script src="https://kit.fontawesome.com/94f4148fc8.js" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN"
        crossorigin="anonymous"></script>
    <script src="https://code.jquery.com/jquery-3.5.1.js"></script>
    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.29.1/moment.min.js"></script>
    <script src="/js/perfil.js"></script>

    <script>// Obtén el valor del input
        var fechaInput = '<%= user.fecha_creacion %>';
        var fechaAct = '<%= user.fecha_actual %>';
        if (fechaInput) {
            var fecha = moment(fechaInput);
            var fechaFormateada = fecha.format('DD/MM/YYYY');
            // Asigna la fecha formateada al elemento con ID "fechaFormateada"
            document.getElementById('fecha').value = fechaFormateada;
        }
        if (fechaAct) {
            var fechaAc = moment(fechaAct);
            var fechanueva = fechaAc.format('DD/MM/YYYY');
            // Asigna la fecha formateada al elemento con ID "fechanueva"
            document.getElementById('fechaActualizada').value = fechanueva;
        }
    </script>
</body>


</html>