<!DOCTYPE html>
<html>
<head>
  <title>Modificar DataTable</title>
  <link rel="shortcut icon" href="img/icon.png" type="image/x-icon">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
  <link href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.2.0/css/bootstrap.min.css">
  <link href="https://cdn.datatables.net/1.13.4/css/dataTables.bootstrap5.min.css">
  <link rel="stylesheet" href="/css/style.css">
  <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
  <style>
    table {
      border-collapse: collapse;
    }
  
    th, td {
      border: 1px solid black;
      padding: 8px;
    }
  </style>
</head>
<body>
  <table id="datatable">
    <thead>
      <tr>
        <th>ID</th>
        <th>Nombre</th>
        <th>Edad</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td>1</td>
        <td>John Doe</td>
        <td>30</td>
      </tr>
      <tr>
        <td>2</td>
        <td>Jane Smith</td>
        <td>25</td>
      </tr>
      <tr>
        <td>3</td>
        <td>Bob Johnson</td>
        <td>35</td>
      </tr>
    </tbody>
  </table>

  <form id="editForm">
    <label>ID:</label>
    <input type="text" id="editId" readonly><br>
    <label>Nombre:</label>
    <input type="text" id="editNombre"><br>
    <label>Edad:</label>
    <input type="text" id="editEdad"><br>
    <input type="submit" value="Guardar">
  </form>


  <script src="https://kit.fontawesome.com/94f4148fc8.js" crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN"
    crossorigin="anonymous"></script>
  <script src="https://code.jquery.com/jquery-3.5.1.js"></script>
  <script src="https://cdn.datatables.net/1.13.4/js/jquery.dataTables.min.js"></script>
  <script src="https://cdn.datatables.net/1.13.4/js/dataTables.bootstrap5.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.29.1/moment.min.js"></script>
  
  <script>
    $(document).ready(function() {
  $('#usuarios tbody').on('click', 'tr', function() {
    var rowData = $(this).children('td').map(function() {
      return $(this).text();
    }).get();

    // Llenar el formulario con los valores de la fila seleccionada
    $('#user').val(rowData[0]);
    $('#nombre').val(rowData[1]);
    $('#pass').val(rowData[2]);
    $('#tipo').val(rowData[3]);

  });

  $('#addUser').on('submit', function(e) {
    e.preventDefault();
    
    // Obtener los valores modificados del formulario
    var user = $('#user').val();
    var nombre = $('#nombre').val();
    var pass = $('#pass').val();
    var tipo = $('#tipo').val();

    // Actualizar los valores en la fila seleccionada
    var rowData = [user, nombre, pass, tipo];
    var selectedRow = $('#usuarios tbody tr.selected');
    selectedRow.children('td').each(function(index) {
      $(this).text(rowData[index]);
    });
  });
});

  </script>


</body>
</html>
