<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>TomaTurnos</title>
  <link rel="shortcut icon" href="img/icon.png" type="image/x-icon">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
  <link href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.2.0/css/bootstrap.min.css">
  <link href="https://cdn.datatables.net/1.13.4/css/dataTables.bootstrap5.min.css">
  <link href="https://cdn.datatables.net/buttons/2.3.6/css/buttons.bootstrap5.min.css">
  <link rel="stylesheet" href="/css/style.css">
</head>

<body>

  <head>
    <%- include('partials/head'); -%>
  </head>

  <div class="container div_margin_top">
    <div class="row row-cols-2 row-form-group">
      <div class="col-sm-6 my-3">
        <div class="form-group ">
          <label for="fecha_inicio">Fecha inicio:</label>
          <input type="date" class="form-control" id="fecha_inicio" name="fecha_inicio">
        </div>
      </div>
      <div class="col-sm-6 my-3">
        <div class="form-group">
          <label for="fecha_fin">Fecha fin:</label>
          <input type="date" class="form-control" id="fecha_fin" name="fecha_fin">
        </div>
      </div>
    </div>

    <div class="row row-cols-2 ">
      <div class="col-sm-2 my-3">
        <div class="input-group">
          <input type="text" id="buscar_operacion" name="buscar_operacion" placeholder=" ">
          <label for="my-input">No. Operación</label>
        </div>
      </div>
      <div class="col-sm-3  my-3">
        <div class="input-group">
          <input type="text" id="buscar_nombre" name="buscar_nombre" placeholder=" ">
          <label for="my-input">Nombre</label>
        </div>
      </div>
      <div class="col-sm-3  my-3">
        <div class="input-group">
          <input type="text" id="buscar_apellidop" name="buscar_apellidop" placeholder=" ">
          <label for="my-input">Apellido paterno</label>
        </div>
      </div>
      <div class="col-sm-2 my-3">
        <div class="input-group">
          <input type="text" id="buscar_apellidom" name="buscar_apellidom" placeholder=" ">
          <label for="my-input">Apellido materno</label>
        </div>
      </div>
      <div class="col-sm-2 my-3">
        <div class="input-group">
          <input type="text" id="buscar_concepto" name="buscar_concepto" placeholder=" ">
          <label for="my-input">Concepto</label>
        </div>
      </div>

      <button hidden type="submit" id="mi-boton-de-busqueda">Buscar</button>
    </div>

    <div class="table-responsive">
      <table class="table-pagos" id="pagos">
        <thead>
          <tr>
            <th scope="col">ID</th>
            <th scope="col">CLAVE</th>
            <th scope="col">NO. OP.</th>
            <th scope="col">FOLIO UT</th>
            <th scope="col">FECHA</th>
            <th scope="col">NOMBRE</th>
            <th scope="col">APELLIDO PATERNO</th>
            <th scope="col">APELLIDO MATERNO</th>
            <th scope="col">TIPO DE COBRO</th>
            <th scope="col">UMA</th>
            <th scope="col">CANT</th>
            <th scope="col">IMPORTE</th>
            <th scope="col">FOLIO</th>
            <th scope="col">EDITAR</th>
          </tr>
        </thead>

      </table>
    </div>
  </div>

  <div class="modal fade" id="Modal-folio" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
    aria-hidden="true">
    <div class="modal-dialog modal-folio">
      <div class="modal-content">
        <div class="modal-header">
          <h1 class="modal-title fs-5" id="ModalFolio">No. Operación</h1>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">

          <form id="update_finanzas" class="was-validated">
            <input type="hidden" id="id">
            <input type="hidden" id="id_contribuyente">
            <input type="hidden" id="concepto">
            <div class="mb-3">
              <label for="folio" class="col-form-label">
                <input type="text" class="form-control" id="folio" readonly onmousedown="return false;"></label>

              <input type="text" class="form-control is-invalid" id="folio_finanzas" name="folio_finanzas" required
                maxlength="8" placeholder="No. Operación">
            </div>

            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
              <button type="submit" class="btn btn-confirmar">Enviar</button>
            </div>
          </form>
        </div>

      </div>
    </div>
  </div>

  <script src="https://kit.fontawesome.com/94f4148fc8.js" crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN"
    crossorigin="anonymous"></script>
  <script src="https://code.jquery.com/jquery-3.5.1.js"></script>
  <script src="https://cdn.datatables.net/1.13.4/js/jquery.dataTables.min.js"></script>
  <script src="https://cdn.datatables.net/1.13.4/js/dataTables.bootstrap5.min.js"></script>
  <script src="https://cdn.datatables.net/buttons/2.3.6/js/dataTables.buttons.min.js"></script>
  <script src="https://cdn.datatables.net/buttons/2.3.6/js/buttons.bootstrap5.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.1.3/jszip.min.js"></script>
  <script src="https://cdn.datatables.net/buttons/2.3.6/js/buttons.html5.min.js"></script>
  <script src="/js/pagos.js"></script>
</body>



</html>